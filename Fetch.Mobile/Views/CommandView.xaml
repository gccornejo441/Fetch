<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Fetch.Mobile.Views.CommandView"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	Title="CommandView"
	xmlns:vm="clr-namespace:Fetch.Mobile.ViewModel">
	<VerticalStackLayout>
		<Label
			HorizontalOptions="Center"
			Text="Welcome to .NET MAUI!"
			VerticalOptions="Center" />
		<Button
			Background="Yellow"
			Command="{Binding AlertUserCommand}"
			CommandParameter="{Binding }"
			Text="Alert" />
	</VerticalStackLayout>
</ContentPage>