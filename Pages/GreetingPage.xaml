<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fetch.Pages.GreetingPage"
             xmlns:vm="clr-namespace:Fetch.ViewModels"
             x:DataType="vm:GreeterViewModel"
             Title="GreetingPage">
    <VerticalStackLayout>
        <Label 
            x:Name="greetLbl"
            Text="{Binding GreetingMessage}"
            VerticalOptions="Center" 
            FontSize="Header"
            HorizontalOptions="Center" />

        <Button Text="Get Greet Message"
                FontAttributes="Bold"
                Clicked="Button_Clicked"
                HorizontalOptions="Center"/>
        
    </VerticalStackLayout>
</ContentPage>