<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Fetch.Pages.GreetingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Fetch.ViewModels"
    Title="GreetingPage"
    x:DataType="vm:GreeterViewModel">
    <VerticalStackLayout>
        <Label
            x:Name="greetLbl"
            FontSize="Header"
            HorizontalOptions="Center"
            Text="{Binding GreetingMessage}"
            VerticalOptions="Center" />

        <Button
            Clicked="Button_Clicked"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            Text="Get Greet Message" />

    </VerticalStackLayout>
</ContentPage>